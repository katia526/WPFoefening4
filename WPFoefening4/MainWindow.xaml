<Window x:Class="WPFoefening4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFoefening4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBox x:Name="txt1" Height="23" Width="50" Margin="10, 10" HorizontalAlignment="Left"/>
            <TextBox x:Name="txt2" Height="23" Width="50" Margin="10, 10" HorizontalAlignment="Left"/>
            <Button x:Name="Plus" Width="100" Height="100" Padding="10,10,10,10" Content="+" Click="Plus_Click"></Button>
            <Button x:Name="Min" Width="100" Height="100" Padding="10,10" Content="-" Click="Min_Click"></Button>
            <Button x:Name="Maal" Width="100" Height="100" Padding="10,10" Content="*" Click="Maal_Click"></Button>
            <Button x:Name="Deel" Width="100" Height="100" Padding="10,10" Content="/" Click="Deel_Click"></Button>
            <TextBox x:Name="totaal"  Height="23" Width="50" Margin="10, 10" HorizontalAlignment="Left"/>
        </StackPanel> 
    </Grid>
</Window>
